{
   "compilerOptions": {
       "declaration": true,
       "sourceMap": true,
       "target": "ES2021",
       "lib": ["ES2021","ES2021.String","ES2021.WeakRef"],
       "module": "CommonJS",
       "moduleResolution": "Node",
       "esModuleInterop": true,
       "allowSyntheticDefaultImports": true,
       "experimentalDecorators": true,
       "rootDir": "src",
       "outDir": "lib"
   },
   "include":[ 
      "src/**/*"
   ],
   "exclude": ["/node_modules/"],
   "compileOnSave":false
}